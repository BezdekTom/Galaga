<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="filename">./logs</Property>
	</Properties>
	<Appenders>
		<RollingFile name="file" fileName="${filename}/demo.log"
			filePattern="${filename}/demo-%d{HH-mm-ss-SSS}.log">
			<PatternLayout>
				<pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%L - %msg%n
				</pattern>
			</PatternLayout>
			<SizeBasedTriggeringPolicy size="1 KB" />
		</RollingFile>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36}:%L - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Logger name="debug_log" level="debug" additivity="false">
			<AppendRef ref="Console" />
		</Logger>
		<Logger name="info_log" level="info" additivity="false">
			<AppendRef ref="file" />
		</Logger>
		<Root level="fatal">
			<AppenderRef ref="Conslole" />
			<AppendRef ref="file" />
		</Root>
	</Loggers>
</Configuration>